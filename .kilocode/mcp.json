{
  "mcpServers": {
    "linear": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.linear.app/sse"
      ],
      "alwaysAllow": [
        "list_comments",
        "create_comment",
        "list_documents",
        "get_document",
        "list_cycles",
        "get_issue",
        "create_issue",
        "update_issue",
        "list_issue_statuses"
      ],
      "disabled": false
    }
  }
}